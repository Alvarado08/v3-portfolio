---
import "@fontsource/onest";
import "@fontsource/onest/600.css";
import NavBar from "../components/sections/NavBar.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Jorge Alvarado - Software Developer" />
    <meta
      property="og:description"
      content="Jorge Alvarado's portfolio and personal website. Computer Engineer | Software Developer."
    />
    <meta property="og:url" content="https://jpadev.netlify.app/" />

    <meta
      property="og:image"
      content="https://ogcdn.net/e4b8c678-7bd5-445d-ba03-bfaad510c686/v4/Personal%20Portfolio/Jorge%20Alvarado%20%20Software%20Developer/https%3A%2F%2Fraw.githubusercontent.com%2FAlvarado08%2Fv3-portfolio%2Fmain%2Fpublic%2Fbrand.png/og.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="jpadev.netlify.app" />
    <meta property="twitter:url" content="https://jpadev.netlify.app" />
    <meta name="twitter:title" content="Jorge Alvarado - Software Developer" />
    <meta
      name="twitter:description"
      content="Jorge Alvarado's portfolio and personal website. Computer Engineer | Software Developer."
    />

    <meta
      property="twitter:image"
      content="https://ogcdn.net/e4b8c678-7bd5-445d-ba03-bfaad510c686/v4/Personal%20Portfolio/Jorge%20Alvarado%20%20Software%20Developer/https%3A%2F%2Fraw.githubusercontent.com%2FAlvarado08%2Fv3-portfolio%2Fmain%2Fpublic%2Fbrand.png/og.png"
    />
    <link rel="icon" type="image/x-icon" href="/brand.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="fixed left-0 top-0 -z-10 w-full h-full">
      <div
        class="absolute inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]"
      >
      </div>
    </div>
    <div class="relative w-full h-screen">
      <NavBar />
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
  }
  [x-cloak] {
    display: none;
  }
  html {
    font-family: "Onest", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow-x: hidden;
  }
  /* Utility Classes */
  .animate {
    animation-duration: 1s;
    animation-fill-mode: both;
  }
  .animate--fast {
    animation-duration: 0.9s;
    animation-fill-mode: both;
  }
  .animate--slow {
    animation-duration: 1.5s;
    animation-fill-mode: both;
  }
  .animate--slow.animate--profile {
    animation-delay: 0.5s;
  }
  .animate.animate--intro {
    animation-delay: 1s;
  }
  .animate--fast.animate--me-1 {
    animation-delay: 1.3s;
  }
  .animate--fast.animate--me-2 {
    animation-delay: 1.5s;
  }
  .animate--fast.animate--me-3 {
    animation-delay: 1.7s;
  }
  .animate--fast.animate--me-4 {
    animation-delay: 1.9s;
  }
  .animate.animate--pill-1 {
    animation-delay: 2s;
  }
  /* Animations */
  @keyframes projectShow {
    from {
      opacity: 0;
      scale: 25%;
      -webkit-transform: scale(0.25);
    }
    to {
      opacity: 1;
      scale: 100%;
      -webkit-transform: scale(1);
    }
  }
  @keyframes showProfile {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes showMe {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(300px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(100px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  #dropdown {
    right: 30px;
  }
  .profile {
    animation-name: showProfile;
    animation-timing-function: ease-in;
  }
  .intro {
    animation-name: slideInRight;
    animation-timing-function: ease-in;
    /* 
		animation-name: slideInLeft;
		Duration to complete 1 lap
		animation-duration: 1s;
		animation-timing-function: ease-in;
		animation-delay: 0s;
		animation-iteration-count: 1;
		animation-direction: normal;
		animation-fill-mode: none; */
  }
  .intro-me {
    animation-name: showMe;
    animation-timing-function: ease-in;
  }
  .socialPills {
    animation-name: slideUp;
    animation-timing-function: ease-in;
  }
  .projects {
    view-timeline-name: --image;
    view-timeline-axis: block;
    animation-timeline: --image;
    animation-name: projectShow;
    animation-range: entry 25% cover 50%;
    animation-fill-mode: both;
  }
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
