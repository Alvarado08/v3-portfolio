---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';
import MailIcon from '../components/icons/MailIcon.astro';
import HashNodeIcon from '../components/icons/HashNodeIcon.astro';
import CodeIcon from '../components/icons/CodeIcon.astro';
import Projects from '../components/Projects.astro';
import AboutMeIntro from '../components/AboutMeIntro.astro';
---

<Layout 
title="Jorge Alvarado - Web Developer and Programmer"
description="Jorge Alvarado's portfolio and personal website. Computer Engineer | Front-End Developer | Full-Stack Developer">
	<main class="px-5">
		<section class="w-full mx-auto lg:w-[740px] py-40 space-y-5">
			<img class="max-w-[150px] max-h-[150px] object-cover overflow-hidden rounded-full profile animate animate--profile" src="/profile.png" alt="Jorge Alvarado photo">
			<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold intro animate animate--intro">Hey, I'm Jorge Alvarado</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<AboutMeIntro/>
			</h2>
			<nav class="socialPills animate animate--pill-1 flex gap-3 flex-wrap">
				<SocialPill href="https://linkedin.com/in/jorgep-alvarado">
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/alvarado08">
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill href="https://jalvarado.hashnode.dev">
					<HashNodeIcon class="size-4 md:size-6"/>
					Hashnode
				</SocialPill>
			</nav>
		</section>
		<section id="projects" class="w-full mx-auto lg:w-[740px] py-40 space-y-7">
			<h2 class="text-2xl lg:text-3xl flex items-center gap-x-3 font-semibold">
				<CodeIcon class="size-6"/>
				Projects
			</h2>
			<Projects/>
		</section>
	</main>
</Layout>
