---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import GitHubIcon from '../components/icons/GitHubIcon.astro';
import MailIcon from '../components/icons/MailIcon.astro';
import HashNodeIcon from '../components/icons/HashNodeIcon.astro';
---

<Layout 
title="Jorge Alvarado - Web Developer and Programmer"
description="Jorge Alvarado's portfolio and personal website. Computer Engineer | Front-End Developer | Full-Stack Developer">
	<main class="px-5">
		<section class="w-full mx-auto lg:w-[740px] py-40 space-y-5">
			<img class="rounded-full size-20 object-cover" src="/profile.png" alt="Jorge Alvarado photo">
			<h1 class="text-3xl md:text-4xl lg:text-5xl font-bold">Hey, I'm Jorge Alvarado</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
				<span class="text-yellow-500/90">Web Developer</span>. I love <span class="text-red-500/90">crafting</span><span> beautiful UIs, <span class="text-blue-600/80">solving problems</span> and bringing ideas to <span class="text-green-600/80">life</span> with code.</span>
			</h2>
			<nav class="flex gap-3 flex-wrap">
				<SocialPill href="https://linkedin.com/in/jorgep-alvarado">
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/alvarado08">
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill href="https://jalvarado.hashnode.dev">
					<HashNodeIcon class="size-4 md:size-6"/>
					Hashnode
				</SocialPill>
			</nav>
		</section>
	</main>
</Layout>
